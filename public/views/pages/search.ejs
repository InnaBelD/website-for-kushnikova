<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <style>
       .well{
            background-color: rgb(168, 196, 155);
        }
        .bigSearch{
          margin-top: 10px;
        }
    </style>
</head>
<body>

<header>
    <%- include('../partials/header'); %>
</header>

<main>
  <div class="row">
    <div class="well col-xl-2">
      <%- include('../partials/sidebarFor_Search'); %>
    </div>
    <div class="main col-xl-10">
      <h1 align="center">Результаты поиска:</h1>
      <form class="bigSearch d-flex">
        <input class="form-control me-2" type="search" placeholder="Что вы хотите найти?" aria-label="Search"></input>
        <a class="btn btn-outline-success" type="submit" href="/search" >Поиск</a>
      </form>
      <div class="row">
        <% products.forEach(function(product){  %>
        <div class="col-xl-3 col-md-6 col-sm-12">
          <%- include('../partials/card.ejs', {product:product}); %>
        </div>
        <% }); %>
      </div>
    </div>
  </div>

</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>
<script src="/js/like.js"></script>
</body>
</html>